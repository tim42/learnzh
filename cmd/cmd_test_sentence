

function ext_cmd_test_sentence
{
    is_tts_enabled || die 3 'TTS support is required for this to work'

    local fnc=tdb_shuf_words
    while true
    do
        debug_log "<new round>"
        for word in $($fnc | head -n$cmd_opt_test_sentence_round_size)
        do
            ex_learn_sentence__valid "$word" || { echo -n '.' ; continue ; }

            echo "<found some sentences, loading stuf...>"
            debug_log "word: $word"

            ex_learn_sentence "$word"

            echo 'press enter to continue'
            local _scratch=
            read -r _scratch
        done
    done
}

